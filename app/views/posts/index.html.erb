<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">

    <title>My Blog</title>

    <!-- Bootstrap Core CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" />

    <!-- Custom CSS -->
    <link href="css/style.css" rel="stylesheet">

</head>

<body>

    <!-- Page Content -->
    <div class="container">

        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header"><%= current_user.first_name %>'s Blog
                    <small>@<%= current_user.username %></small>
                </h1>
            </div>
        </div>
        <!-- /.row -->

        <!-- All Posts -->
        <% @posts.each do |post|%>
        <div class="row">
            <div class="col-md-7">
                <a href="#">
                    <img class="img-responsive" src=<%= post.post_image %> alt="">
                </a>
            </div>
            <div class="col-md-5">
                <h3><%= post.post_title %></h3>

                <p><%= post.post_body %></p>

                <a class="btn btn-primary" href="<%= post_path(post.id) %>">View Post <span class="glyphicon glyphicon-chevron-right"></span></a>

            </div>
        </div>

        <hr>

        <% end %>
        <!-- /.row -->

        <!-- Pagination -->
        <div class="text-center">
            Pagination Here
        </div>
        <!-- /.row -->

        <hr>

        <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p>Copyright &copy; <%= current_user.first_name %> <%= current_user.last_name %> 2015</p>
                </div>
            </div>
            <!-- /.row -->
        </footer>

    </div>
    <!-- /.container -->

    <!-- jQuery -->
    <script src="http://code.jquery.com/jquery-2.1.4.min.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>

</body>

</html>
